---
import HeaderLink from './HeaderLink.astro';
import { GITHUB_URL, SITE_TITLE, TWITTER_URL } from '../config';
---

<header>
	<h1>
		{SITE_TITLE}
	</h1>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href={TWITTER_URL} target="_blank">Twitter</HeaderLink>
		<HeaderLink href={GITHUB_URL} target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
